call plug#begin('~/.vim/plugged')

" Foundation
Plug 'vim-scripts/matchit.zip'
Plug 'vim-scripts/Syntastic'
Plug 'vim-scripts/repeat.vim'
Plug 'vim-scripts/CmdlineComplete'
Plug 'tpope/vim-surround'
Plug 'ervandew/supertab'
Plug 'mateusbraga/vim-spell-pt-br'

" File navigation
Plug 'vim-scripts/ctrlp.vim'
Plug 'scrooloose/nerdtree', { 'on': [ 'NERDTree', 'NERDTreeToggle' ] }
Plug 'rking/ag.vim', { 'on': 'Ag' }

" Tmux integration
Plug 'jpalardy/vim-slime', { 'for': [ 'clojure', 'ruby', 'javascript', 'python' ] }

" Notes
Plug 'vim-scripts/vim-auto-save', { 'on': [ 'RecentNotes', 'AutoSaveToggle' ] }
Plug 'xolox/vim-misc', { 'on': 'RecentNotes' }
Plug 'xolox/vim-notes', { 'on': 'RecentNotes' }

" UI
Plug 'NLKNguyen/papercolor-theme'
Plug 'bling/vim-airline'
Plug 'inside/vim-search-pulse'
Plug 'junegunn/limelight.vim', { 'on': 'Limelight' }

" Languages
Plug 'tpope/vim-markdown', { 'for': 'markdown' }
Plug 'tfnico/vim-gradle', { 'for': 'groovy' }
Plug 'idris-hackers/idris-vim', { 'for': 'idris' }
Plug 'mustache/vim-mustache-handlebars', { 'for': 'html.handlebars' }
Plug 'kchmck/vim-coffee-script', { 'for': 'coffee' }

" Clojure
Plug 'guns/vim-clojure-static', { 'for': 'clojure' }
Plug 'gregspurrier/vim-midje', { 'for': 'clojure' }
Plug 'tpope/vim-fireplace', { 'for': 'clojure' }
Plug 'typedclojure/vim-typedclojure', { 'for': 'clojure' }

" Python
Plug 'klen/python-mode', { 'for': 'python' }
Plug 'alfredodeza/pytest.vim', { 'for': 'python' }

call plug#end()

