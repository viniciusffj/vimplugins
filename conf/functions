function SetUseSpaces()
  set shiftwidth=2
  set tabstop=2
  set expandtab
  echo "Using spaces instead of tab"
endfunction

command! UseSpaces call SetUseSpaces()

function! InsertTabWrapper()
    let col = col('.') - 1
    if !col || getline('.')[col - 1] !~ '\k'
        return "\<tab>"
    else
        return "\<c-p>"
    endif
endfunction

inoremap <Tab> <C-R>=InsertTabWrapper()<CR>
inoremap <S-Tab> <C-N>
