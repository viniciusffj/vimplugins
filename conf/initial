syntax enable

set hidden
set number
set incsearch
set ignorecase
set smartindent
set autoindent
set linebreak
set showmatch
set showcmd
set nobackup
set noswapfile
set mousehide
set wildmenu
set ttyfast
set lazyredraw
set notimeout
set ttimeout

set ttimeoutlen=10
set complete=.,w,b,u,t
set completeopt=longest,menuone,preview
set wildmode=list:longest
set encoding=utf-8
set laststatus=2
set tabstop=4
set shiftwidth=4

filetype indent plugin on

let g:ctrlp_working_path_mode = 'a'
let g:slime_target = 'tmux'
let g:airline#extensions#bufferline#enabled = 0
let g:vim_search_pulse_mode = 'pattern'

