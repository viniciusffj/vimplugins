syntax enable

set hidden
set number
set relativenumber
set hlsearch
set incsearch
set smartindent
set autoindent
set ignorecase
set nowrap
set showmatch
set showcmd
set nobackup
set lazyredraw
set mousehide
set wildmenu

set encoding=utf-8
set laststatus=2
set tabstop=4
set shiftwidth=4

filetype indent on
filetype plugin on

let g:ctrlp_working_path_mode = 'a'
let g:slime_target = 'tmux'

let g:UltiSnipsListSnippets="<C-e>"
let g:UltiSnipsExpandTrigger="<nokey>"
let g:UltiSnipsJumpForwardTrigger="<nokey>"
let g:UltiSnipsJumpBackwardTrigger="<nokey>"

