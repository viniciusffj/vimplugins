let mapleader=" "
let mallocalleader=" "
set pastetoggle=<F2>

noremap               <Leader>ev                    :vsplit $MYVIMRC<CR>
noremap               <Leader>sv                    :source $MYVIMRC<CR>
noremap               <Leader>en                    :vsplit $HOME/.vim/scripts/notes.vim<CR>
noremap               <Leader>sn                    :source $HOME/.vim/scripts/notes.vim<CR>
noremap               <Leader>ep                    :vsplit $HOME/.vim/scripts/presentation.vim<CR>
noremap               <Leader>sp                    :source $HOME/.vim/scripts/presentation.vim<CR>

noremap               <C-w>l                        :belowright vnew<CR>
noremap               <C-w>h                        :aboveleft vnew<CR>
noremap               <C-w>j                        :belowright new<CR>
noremap               <C-w>k                        :aboveleft new<CR>

noremap               ]q                            :cn<CR>
noremap               [q                            :cp<CR>
noremap               ]b                            :bn<CR>
noremap               [b                            :bp<CR>

noremap               <Leader>y                     "+y
noremap               <Leader>p                     "+p
noremap               <Leader>P                     "+P

noremap               <Leader><Leader>2             :call SetUseSpaces(2)<CR>
noremap               <Leader><Leader>4             :call SetUseSpaces(4)<CR>
noremap               <Leader><Leader><Tab>         :call SetUseSpaces(4)<CR>:set noexpandtab<CR>

noremap               <Leader>o                     m`o<Esc>``
noremap               <Leader>O                     m`O<Esc>``

inoremap              <Tab>                         <C-r>=InsertTabWrapper()<CR>
inoremap              <S-Tab>                       <C-n>

nnoremap              Q                             @q
vnoremap              Q                             :norm @q<CR>

noremap               <C-w>t                        :tabnew<CR>
noremap               <C-w>m                        :vertical res<CR>:res<CR>

noremap               <Leader>b                     :CtrlPBuffer<CR>
noremap               <Leader>t                     :CtrlPTag<CR>

noremap               <F1>                          <Esc>
inoremap              <F1>                          <Esc>
noremap               <F4>                          :NERDTreeToggle<CR>
noremap               <F12>                         :SyntasticToggleMode<CR>

noremap               <Leader>l                     :set list!<CR>
noremap               <Leader>h                     :set hlsearch!<CR>
noremap               <silent><C-n>                 :call search_pulse#Pulse()<CR>

" vim: ft=vim
