let mapleader=" "
set pastetoggle=<F2>

noremap               <Up>                          <nop>
noremap               <Down>                        <nop>
noremap               <Left>                        <nop>
noremap               <Right>                       <nop>

noremap               <C-w>l                        :belowright vnew<cr>
noremap               <C-w>h                        :aboveleft vnew<cr>
noremap               <C-w>j                        :belowright new<cr>
noremap               <C-w>k                        :aboveleft new<cr>

noremap               ]q                            :cn<cr>
noremap               [q                            :cp<cr>

noremap               <Leader>r                     :%s/\C<c-r>=expand("<cword>")<cr>/<c-r>=expand("<cword>")<cr>/gc<left><left><left>
noremap               <Leader><Leader>r             :%s/\C<c-r>=expand("<cword>")<cr>//gc<left><left><left>

noremap               <Leader>y                     "+y
noremap               <Leader>p                     "+p
noremap               <Leader>P                     "+P

noremap               <Leader><Leader>2             :call SetUseSpaces(2)<cr>
noremap               <Leader><Leader>4             :call SetUseSpaces(4)<cr>
noremap               <Leader><Leader><Tab>         :call SetUseSpaces(4)<cr>:set noexpandtab<cr>

inoremap              <Tab>                         <C-R>=InsertTabWrapper()<CR>
inoremap              <S-Tab>                       <C-N>

nnoremap              Q                             @q
vnoremap              Q                             :norm @q<cr>

noremap               <C-w>t                        :tabnew<cr>
noremap               <S-l>                         gt
noremap               <S-h>                         gT

noremap               <expr><silent><Space><Space>  ":vertical res<cr>:res<cr>"
noremap               <Space>=                      <C-w>=
noremap               <Space>o                      <C-w>o

noremap               <F1>                          <Esc>
inoremap              <F1>                          <Esc>

noremap               <F4>                          :NERDTreeToggle<cr>
noremap               <F3>                          :CtrlPTag<cr>

noremap               <expr><F11>                   QuickToggleRelativeNumbers()
noremap               <F12>                         :SyntasticToggleMode<cr>

noremap               <cr>                          :nohlsearch<cr>
